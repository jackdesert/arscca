<table>
    <tr>
        <th class='calendar-event__th'>Date</th>
        <th class='calendar-event__th'>Event</th>
        <th class='calendar-event__th'>Location</th>
        <th class='calendar-event__th'>Information</th>
    </tr>
    {% for event in events %}
        <tr class='calendar-event__tr calendar-event__tr_{{ event.css_class }}'>
            <td class='calendar-event__td'>{{ event.date_formatted  }}</td>
            <td class='calendar-event__td'>
                <div>
                    {% if event.link %}
                        <a href='{{ event.link }}' >{{ event.name }}</a>
                    {% else %}
                        {{ event.name }}
                    {% endif %}
                </div>
            </td>
            <td class='calendar-event__td'>
                {% if event.stuttgart %}
                    <a href='//arscca.org/stuttgart'>Stuttgart Municipal</a>
                {% elif event.jitsi %}
                    <a href='//meet.jit.si/arscca'>Jitsi Teleconference</a>
                {% else %}
                    {{ event.venue }}
                    <br>
                    {{ event.address }}
                {% endif %}
            </td class='calendar-event__td'>
            <td class='calendar-event__td'>
                {{ event.info | safe }}
            </td>
        </tr>
    {% endfor %}
</table>
