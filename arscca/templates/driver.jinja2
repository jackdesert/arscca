{% extends "layout.jinja2" %}

{% block content %}

<div class="content">
    <div class='crumb'>
        <a href='/' class='crumb__link'>Home</a>
        ->
        Drivers
        ->
        {{ name }}
    </div>

    <div class='driver__name'>{{ name }}</div>
    {% for photo in photos %}
        <img class='driver__photo' src='{{ photo.path("medium", request=request) }}'></img>
    {% endfor %}

    {% if gossip %}
        <div class='gossip'>
            {% if not '<h2>' in gossip %}
                <h2>About {{ name.split(' ')[0] }}</h2>
            {% endif %}

            {{ gossip | safe }}
        </div>
    {% endif %}


</div>
{% endblock content %}
