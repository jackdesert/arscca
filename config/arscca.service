[Unit]
Description=ARSCCA
Wants=network.target
Wants=redis-server.service

[Service]
Type=simple
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/arscca
EnvironmentFile=/home/ubuntu/arscca/config/environment.txt

ExecStart=/home/ubuntu/arscca/env/bin/pserve production.ini

TimeoutSec=30
RestartSec=15s
Restart=always

[Install]
WantedBy=multi-user.target

